{
  "compilerOptions": {
    "types": ["homey", "jest", "node"],
    "target": "ES2019",
    "module": "CommonJS",
    "lib": ["ES2019"],
    "rootDir": ".",
    "outDir": "build/",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["*.ts", "lib/**/*.ts", "handlers/**/*.ts", "tests/**/*.ts"],
  "exclude": ["node_modules", "build", ".homeybuild"]
}
