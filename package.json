{
  "name": "no.runely.calendar",
  "version": "1.8.1",
  "main": "app.js",
  "engines": {
    "node": ">=22.0.0"
  },
  "repository": {
    "url": "https://github.com/runely/calendar-homey"
  },
  "license": "GPL-3.0-or-later",
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@tsconfig/node22": "^22.0.5",
    "@types/homey": "npm:homey-apps-sdk-v3-types@0.3.12",
    "@types/humanize-duration": "^3.27.4",
    "@types/jest": "^30.0.0",
    "@types/lodash.clonedeep": "^4.5.9",
    "@types/luxon": "^3.7.1",
    "@types/node": "^25.0.2",
    "browserify": "17.0.1",
    "jest": "^30.2.0",
    "moment": "^2.30.1",
    "moment-timezone": "^0.6.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "croner": "^9.1.0",
    "humanize-duration": "^3.33.2",
    "lodash.clonedeep": "4.5.0",
    "luxon": "^3.7.2",
    "node-ical": "^0.22.1"
  },
  "scripts": {
    "build": "tsc",
    "test": "tsc --noEmit && biome check && env TZ=UTC jest",
    "fix": "biome check --write",
    "refresh": "rm -rf node_modules/ && rm package-lock.json && npm i",
    "browserify": "browserify lib/variable-management.js --standalone variableMgmt -o settings/variable-management.js",
    "homey-build": "npm run browserify && npm run test && homey app build",
    "homey-run": "npm run homey-build && homey app run",
    "homey-install": "npm run homey-build && homey app install",
    "homey-publish": "npm run homey-build && homey app publish"
  },
  "jest": {
    "modulePathIgnorePatterns": [
      "<rootDir>/build/",
      "<rootDir>/.homeybuild/"
    ],
    "testMatch": [
      "**/tests/**/*test.[jt]s?(x)",
      "**/?(*.)+.(spec|test).[jt]s?(x)"
    ]
  }
}
