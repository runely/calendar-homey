{
  "name": "no.runely.calendar",
  "version": "1.8.1",
  "engines": {
    "node": ">=22.0.0"
  },
  "repository": {
    "url": "https://github.com/runely/calendar-homey"
  },
  "license": "GPL-3.0-or-later",
  "devDependencies": {
    "@biomejs/biome": "2.3.12",
    "@tsconfig/node16": "^16.1.8",
    "@types/homey": "npm:homey-apps-sdk-v3-types@^0.3.12",
    "@types/humanize-duration": "^3.27.4",
    "@types/jest": "^30.0.0",
    "@types/lodash.clonedeep": "^4.5.9",
    "@types/luxon": "^3.7.1",
    "@types/node": "^25.0.10",
    "@types/source-map-support": "^0.5.10",
    "esbuild": "^0.27.2",
    "jest": "^30.2.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "croner": "^9.1.0",
    "humanize-duration": "^3.33.2",
    "lodash.clonedeep": "4.5.0",
    "luxon": "^3.7.2",
    "node-ical": "0.24.1",
    "source-map-support": "^0.5.21"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build-tests": "tsc -p tsconfig_tests.json",
    "test": "biome check && npm run build-tests && env TZ=UTC jest",
    "fix": "biome check --write",
    "refresh": "rm -rf node_modules/ && rm package-lock.json && npm i",
    "bundle-varMgmt": "npx esbuild ./lib/variable-management.ts --bundle --format=iife --platform=browser --global-name=VariableMgmt --outfile=./settings/variable-management-settings.js",
    "homey-build": "npm run build && npm run bundle-varMgmt && npm run test && homey app build",
    "homey-run": "npm run homey-build && homey app run --remote",
    "homey-run-clean": "npm run homey-build && homey app run --remote --clean",
    "homey-install": "npm run homey-build && homey app install",
    "homey-publish": "npm run homey-build && homey app publish"
  },
  "jest": {
    "modulePathIgnorePatterns": [
      "<rootDir>/.homeybuild/"
    ],
    "testMatch": [
      "<rootDir>/.build/tests/**/*test.[jt]s?(x)",
      "<rootDir>/.build/?(*.)+.(spec|test).[jt]s?(x)"
    ]
  }
}
